{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./generated/typescript",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "generated/typescript/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}